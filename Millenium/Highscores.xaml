            <TextBlock x:Name="Ranking6" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Row="6"/>
            <TextBlock x:Name="Name6" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="1" Grid.Row="6"/>
            <TextBlock x:Name="Score6" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Left" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="2" Grid.Row="6"/>
            <TextBlock x:Name="Ranking7" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Row="7"/>
            <TextBlock x:Name="Name7" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="1" Grid.Row="7"/>
            <TextBlock x:Name="Score7" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Left" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="2" Grid.Row="7" />
            <TextBlock x:Name="Ranking8" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Row="8" />
            <TextBlock x:Name="Name8" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="1" Grid.Row="8" />
            <TextBlock x:Name="Score8" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Left" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="2" Grid.Row="8" />
            <TextBlock x:Name="Ranking9" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Row="9" />
            <TextBlock x:Name="Name9" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Center" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="1" Grid.Row="9" />
            <TextBlock x:Name="Score9" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Stretch" Foreground="White" TextAlignment="Left" FontFamily="Gill Sans MT" FontSize="34" Grid.Column="2" Grid.Row="9" />
        </Grid>
    </Grid>
</UserControl>
